@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Helpers
@using Sitecore.Feature.Blog.Models
@using Sitecore.Foundation.SitecoreExtensions.Extensions

@inherits GlassView<IBlogArticle>
@{
    var themeClass = Model.ArticleType?.Name == "Blog" ? "c-blog" : "c-news";
}
<div class="cell small-12 large-4">
    <div class="box-wrapper @themeClass">
        <div class="box box--theme equal-heights">
            <header class="box__header">
                <div class="box__tab">
                </div>
                <div class="box__heading">
                    <h3 class="h6 box__title">
                        @Model.BlogTitle
                    </h3>
                    <p class="box__subtitle">
                        @(Model.BlogCategory)
                    </p>
                </div>
            </header>
            <div class="box__body">
                <p>@Model.BlogIntroduction.Truncate(130)</p>
                <small>@Model.BlogDate.ToString("dd/MM/yyyy")</small>
            </div>
            <footer class="box__footer">
                <div class="dual-btn">
                    <a href="@Model.Url" class="button button--transparent">
                        @CustomHtmlHelper.Icon("chevron-right") <span class="button__text">Read more</span>
                    </a>
                </div>
            </footer>
        </div>
    </div>
</div>
