<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    <unicorn>
      <configurations>
        <configuration name="Feature.Blog" description="Feature Blog" dependencies="Foundation.*" extends="Helix.Feature">
          <predicate>
            <include name="System Settings" database="master" path="/sitecore/system/Settings/Feature/Blog" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
